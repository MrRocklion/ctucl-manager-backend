generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_HOST")
}

model charging_points {
  id            Int      @id @default(autoincrement())
  uuid          String   @unique @default(uuid())
  lat           Float
  lon           Float
  description   String?
  ruc           String
  ci            String
  name          String
  lastname      String
  device_id     String?  @unique
  user          String?
  business_name String
  email         String?
  phone         String
  imei          String?
  address       String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now())
}
enum AccountType {
  ADMIN
  STAFF
  USER
}
model company {
  id    Int    @id @default(autoincrement())
  name  String
  users users[]
}

model users {
  id          Int        @id @default(autoincrement())
  uuid        String     @unique @default(uuid())
  username    String     @unique
  email       String     @unique
  isActive    Boolean    @default(true)
  phone       String?
  register    String?
  address     String?
  accountType AccountType
  name        String
  lastname    String
  password    String
  company     company?   @relation(fields: [companyId], references: [id])
  companyId   Int?
  birthday    DateTime
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}